/* 场地侧边步骤操作播放、重置、完成等: app.wxss */
/* .operate_steps
.operate_button */

/* play 时第一步动画 */
@keyframes flash {
  0% {
    box-shadow: none;
  }
  100% {
    box-shadow: 0 0 40rpx rgb(255, 255, 255);
  }
}

.sideline_area {
  position: absolute;
  top: 325rpx;
  left: 660rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.sideline_defence {
  width: 40rpx;
  height: 40rpx;
  background-color: #2B5B6C;
  border-radius: 50%;
  text-align: center;
  line-height: 40rpx;
  color: white;
  font-size: 24rpx;
  box-shadow: 1rpx 1rpx 2rpx 2rpx rgba(0,0,0,0.05);
}

.on_field {
  display: block;
}

.on_sideline {
  display: none;
}

.sideline_helper {
  display: block
}

.sideline_no_helper {
  display: none
}

/* 具体 .operate_button 的细节 */
.play {
  padding: 15rpx;
  padding-left: 20rpx;
}

.done {
  padding: 6rpx;
}

.reset {
  padding: 13rpx;
}

.play_a_step, .del_a_step {
  width: 50rpx;
  height: 50rpx;
  padding: 10rpx;
  margin-bottom: 0;
}

.play_a_step {
  padding-left: 15rpx;
}

