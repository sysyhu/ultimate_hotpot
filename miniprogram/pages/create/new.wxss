.board_banner {
  width: 100%;
  height: 540rpx;
  position: relative;
  background-color: #E34F33;
  z-index: -4;
}

.frisbee {
  position: absolute;
  top: 240rpx;
  left: 100rpx;
  width: 60rpx;
  height: 60rpx;
  background-color: white;
  text-align: center;
  line-height: 60rpx;
  color: #d81e06;
  font-size: 10rpx;
  font-weight: 700;
  border-radius: 50%;
  z-index: 1;
  box-shadow: 2rpx 2rpx 4rpx 4rpx rgba(0,0,0,0.04);
}

.player_1, .player_2 {
  width: 60rpx;
  height: 60rpx;
  background-color: #FFC87E;
  text-align: center;
  border-radius: 50%;
  position: absolute;
  z-index: 2;
  box-shadow: 2rpx 2rpx 4rpx 4rpx rgba(0,0,0,0.04);
  z-index: 1;
}

.player_1 {
  top: 260rpx;
  left: 80rpx;
}

.player_2 {
  top: 240rpx;
  left: 640rpx;
}

.slogan_cover {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: -1;
}

.slogan {
  width: 358rpx;
  color: rgba(0, 0, 0);
  font-weight: 700;
  font-size: 32rpx;
  z-index: -2;
}

.login_button {
  width: 150rpx;
  position: absolute;
  top: 300rpx;
  left: 200rpx;
  background-color: #fff;
  color: #d81e06;
  box-shadow: 2rpx 2rpx 5rpx 5rpx rgba(0,0,0,0.1);
}

.create_a_board {
  background-color: #FAF3EB;
  border-radius: 12rpx;
  width: 60%;
  margin: auto;
  margin-top: -160rpx;
  box-shadow: 2rpx 2rpx 6rpx 6rpx rgba(0,0,0,0.05);
  z-index: 2;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding: 40rpx;
  box-sizing: border-box;
}

.create_title {
  font-weight: 700;
  margin-bottom: 40rpx;
}

.input_content {
  background-color: #fff;
  width: 100%;
  border-radius: 6rpx;
  padding: 20rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

input, textarea {
  width: 100%;
}

.submit_button {
  background-color: #E34F33;
  color: white;
}

.create_display_none, .button_display_none {
  display: none;
}

.not_login {
  margin: auto;
  margin-top: 200rpx;
  color: #E34F33;
}