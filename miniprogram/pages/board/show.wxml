<view class="note {{note_display_none}}">{{note}}</view>

<view class="grass">
  <movable-area class="field">
    <view class="endzone_line endzone_line_1"></view>
    <view class="endzone_line endzone_line_2"></view>
    <image class="brick_mark brick_mark_1" src="../../images/brick_mark.png" mode="widthFix"></image>
    <image class="brick_mark brick_mark_2" src="../../images/brick_mark.png" mode="widthFix"></image>
    <!-- frisbee -->
    <movable-view class="frisbee" direction="all" x="{{frisbee_x}}" y="{{frisbee_y}}" bindtouchend="position" disabled="{{true}}">HOTPOT</movable-view>
    <!-- offence -->
    <movable-view class="offence offence_1" x="{{offence_1_x}}" y="{{offence_1_y}}" direction="all" bindtouchend="position" disabled="{{true}}">1</movable-view>
    <movable-view class="offence offence_2" x="{{offence_2_x}}" y="{{offence_2_y}}" direction="all" bindtouchend="position" disabled="{{true}}">2</movable-view>
    <movable-view class="offence offence_3" x="{{offence_3_x}}" y="{{offence_3_y}}" direction="all" bindtouchend="position" disabled="{{true}}">3</movable-view>
    <movable-view class="offence offence_4" x="{{offence_4_x}}" y="{{offence_4_y}}" direction="all" bindtouchend="position" disabled="{{true}}">4</movable-view>
    <movable-view class="offence offence_5" x="{{offence_5_x}}" y="{{offence_5_y}}" direction="all" bindtouchend="position" disabled="{{true}}">5</movable-view>
    <movable-view class="offence offence_6" x="{{offence_6_x}}" y="{{offence_6_y}}" direction="all" bindtouchend="position" disabled="{{true}}">6</movable-view>
    <movable-view class="offence offence_7" x="{{offence_7_x}}" y="{{offence_7_y}}" direction="all" bindtouchend="position" disabled="{{true}}">7</movable-view>

    <!-- defence -->
    <movable-view class="defence defence_1" x="{{defence_1_x}}" y="{{defence_1_y}}" direction="all" bindtouchend="position" disabled="{{true}}">1</movable-view>
    <movable-view class="defence defence_2" x="{{defence_2_x}}" y="{{defence_2_y}}" direction="all" bindtouchend="position" disabled="{{true}}">2</movable-view>
    <movable-view class="defence defence_3" x="{{defence_3_x}}" y="{{defence_3_y}}" direction="all" bindtouchend="position" disabled="{{true}}">3</movable-view>
    <movable-view class="defence defence_4" x="{{defence_4_x}}" y="{{defence_4_y}}" direction="all" bindtouchend="position" disabled="{{true}}">4</movable-view>
    <movable-view class="defence defence_5" x="{{defence_5_x}}" y="{{defence_5_y}}" direction="all" bindtouchend="position" disabled="{{true}}">5</movable-view>
    <movable-view class="defence defence_6" x="{{defence_6_x}}" y="{{defence_6_y}}" direction="all" bindtouchend="position" disabled="{{true}}">6</movable-view>
    <movable-view class="defence defence_7" x="{{defence_7_x}}" y="{{defence_7_y}}" direction="all" bindtouchend="position" disabled="{{true}}">7</movable-view>
  </movable-area> 
</view>

<view class="field_strech"></view>

<view class="operate_steps">
  <!-- <image class="create" bindtap="create" src="../../images/create.png"></image> -->
  <image class="operate_button play" bindtap="play" src="../../images/play.png"></image>
  <image class="operate_button eye" bindtap="eye" src="../../images/{{eye}}.png" data-eye="{{eye}}"></image>
  <image class="operate_button home" bindtap="home" src="../../images/home.png"></image>
</view>

<view class="board_info">
  <view class="board_step_title">{{board_title}}</view>
  <view class="board_step_description">{{board_description}}</view>

  <view class="step_index">
    <view class="a_step" wx:for="{{steps}}" wx:key="item">
      <view class="a_step_description">{{item.a_step}}</view>
      <image class="operate_button play_a_step" bindtap="play_a_step" src="../../images/play.png" data-step_id="{{item.step_id}}"></image>
    </view>
    <view class="line"></view>
    <view class="line"></view>
    <view class="line"></view>
  </view>
</view>

