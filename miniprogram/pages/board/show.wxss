/* 与步骤演示同步的步骤描述，可关闭不看 */
.note {
  position: absolute;
  top: 40rpx;
  left: 0;
  width: 100%;
  background-color: rgb(250, 250, 250, 0.2);
  color: #fff;
  padding: 10rpx;
  z-index: 3;
  box-sizing: border-box;
}

.note_display_none {
  display: none;
}

