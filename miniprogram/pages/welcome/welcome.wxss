.ads_banner {
  width: 100%;
  height: 480rpx;
}

.ads_swiper_image {
  width: 100%;
}

.frisbee {
  position: absolute;
  top: 230rpx;
  left: 80%;
  box-shadow: 1rpx 1rpx 2rpx 2rpx rgba(0,0,0,0.03);
  z-index: 2;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: white;
  text-align: center;
  line-height: 60rpx;
  color: #d81e06;
  font-size: 12rpx;
  font-weight: 700;
}

.home_page_content_strench {
  width: 100%;
  height: 120rpx;
  margin-top: -120rpx;
  background-color: #F6F6F6;
  border-radius: 60rpx 60rpx 0 0;
  z-index: 1;
}

.home_page_content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #F6F6F6;
}

.welcome_logo {
  width: 240rpx;
  margin-bottom: 60rpx;
}

.most_basic, .best_open {
  width: 80%;
  margin-bottom: 40rpx;
}

.title {
  font-weight: 700;
  margin-bottom: 20rpx;
}

.board_index {
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
  box-shadow: 2rpx 2rpx 5rpx 5rpx rgba(0,0,0,0.04);
}

.board_title {
  color: #d81e06;
  font-weight: 700;
  margin-bottom: 10rpx;
}

.board_description {
  color: #8a8a8a;
  font-size: small;
}

.open_image {
  width: 100%;
  border-radius: 8rpx;
  box-shadow: 2rpx 2rpx 5rpx 5rpx rgba(0,0,0,0.08);
}
